<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    style="@style/InstabugBaseContainer"
    android:clickable="true" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/InstabugDialogToolbarContainer"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/instabug_fragment_title"
            style="@style/InstabugDialogTitle"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="0dp"
        style="@style/InstabugDialogContainer">

    <LinearLayout
        android:id="@+id/instabug_blank"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/instabug_no_messages_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="No Conversations Yet"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Press back to send us your first feedback"
            />
    </LinearLayout>
 <LinearLayout
        android:id="@+id/instabug_disconnected"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/instabug_no_connection_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No Internet Connection"
            android:textStyle="bold"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/instabug_lst_conversations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:drawSelectorOnTop="true"
        android:layout_weight="1"
        android:visibility="gone" />
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/mSobhy/workspaces/android/instabug-android/instabug/src/main/res/layout/instabug_lyt_conversations.xml -->