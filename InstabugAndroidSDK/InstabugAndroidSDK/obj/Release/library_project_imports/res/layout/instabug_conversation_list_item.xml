<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/conversation_container"
        style="@style/InstabugConversationItemContainer">

        <com.instabug.library.view.CircularImageView
            android:id="@+id/instabug_img_message_sender"
            android:layout_width="@dimen/instabug_conversation_item_container_height"
            android:layout_height="@dimen/instabug_conversation_item_container_height"
            android:layout_marginRight="8dp"
            android:src="@drawable/instabug_ic_avatar"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/instabug_conversation_item_container_height"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/instabug_txt_message_sender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:gravity="bottom"
                    android:layout_weight="0.65"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="?attr/instabug_color_foreground"
                    android:textSize="@dimen/instabug_normal_text_size"
                    android:paddingLeft="4dp"
                    tools:text="Omar El tawel awe"/>

                <TextView
                    android:id="@+id/instabug_txt_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:gravity="end|bottom"
                    android:singleLine="true"
                    android:textColor="@color/instabug_text_color_grey"
                    android:textSize="@dimen/instabug_date_text_size"
                    tools:text="Yesterday" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/instabug_img_bug_type"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    style="@style/InstabugBottomSheetItemBaseImage"
                    android:tint="@color/instabug_text_color_grey"
                    android:src="@drawable/instabug_ic_bug_dark"/>

                <TextView
                    android:id="@+id/instabug_txt_message_snippet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="?attr/instabug_color_foreground"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/instabug_button_text_size"
                    tools:text="I have some problem that is annoying me."/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/instabug_separator_height"
        android:layout_marginLeft="@dimen/instabug_container_padding"
        android:layout_marginRight="@dimen/instabug_container_padding"
        android:background="?attr/instabug_divider_color"/>
</LinearLayout>
